}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <title>Büşra GÜLEÇ</title>
    <meta name="description" content="Büşra GÜLEÇ">
    <meta name="keywords" content="busra , gulec , html , css , plc ">
    <link rel="stylesheet" href="/web-Kişisel Web Sitesi/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <style>
       
        #banner {
            width: 250px;
            min-height: 550px;
            border-style: double;
            margin-left:102%;
            margin-top:18%;
            border-width: 7px;
            background-color: #fffacdc4;

         
        }

            #banner img {
                width: 236px;
                height: 545px;
            }

        #banner2 {
            width: 250px;
            min-height: 550px;
            border-style: double;
            margin-left: -260px;
            margin-top: -565px;
            border-width: 7px;
            background-color: #fffacdc4;
        }
        #banner2 img {
            width: 236px;
            height: 545px;
        }

       

        #sayfa {
            width: 900px; /* genişlik */
            min-height: 937px; /* uzunluk*/
            border-style: double; /* çizgi tipi*/
            margin-top:-759px;
            border-width: 7px; /* çizgi kalınlığı */
            background-color: #fffacdc4;
        }

        /* Yan Menü*/
        #yanmenu {
            width: 300px;
            min-height: 923px;
            border-style: solid;
        }

        /* Ust */
        #ust {
            width: 300px;
            min-height: 280px;
            border-style: none;
        }

        /* Orta */
        #orta {
            width: 300px;
            min-height: 470px;
            border-style: none;
        }

        /* Alt */
        #alt {
            width: 300px;
            min-height: 30px;
            border-style: none;
        }

        #kare {
            width: 194px;
            height: 193px;
            margin-top: 40%;
            margin-left: 16%;
            border-style: double;
            background-color: rgb(1, 36, 21);
            border-radius: 60%;
            z-index: 100;
        }


        #box {
            padding: 2px;
            text-align: center;
            margin: auto;
            margin-top: -23%;
            color: black;
            font-family: Georgia, 'Times New Roman', Times, serif;
            z-index: 99;
        }

            #box img {
                border-radius: 60%;
                width: 180px;
                height: 180px;
                transition: 0.5s;
                cursor: pointer;
                position: relative;
                margin-top: 2%;
            }

                #box img:hover {
                    transform: scale(0.9);
                }

        ul {
            margin: 0;
            padding: 0;
        }

        #box li {
            display: inline-block;
            margin: 15px;
            list-style: none;
        }

            #box li a {
                color: rgb(1, 36, 21);
                font-size: 30px;
                transition: all ease-in-out 250ms;
            }

                #box li a:hover {
                    color: #2F4F4F;
                }

        #anamenu {
            position: absolute;
            top: 0;
            right: 510px;
            width: 598px;
            min-height: 915px;
        }

        .box1 {
            padding: 10px;
            text-align: center;
            margin: auto;
            margin-top: 20%;
            font-family: Georgia, 'Times New Roman', Times, serif;
            letter-spacing: 1px;
        }

            .box1 img {
                border-radius: 50%;
                width: 200px;
                height: 200px;
                transition: 0.5s;
                cursor: pointer;
            }

                .box1 img:hover {
                    transform: scale(0.9);
                }


            .box1 li {
                margin: 50px;
                list-style: none;
            }

                .box1 li a {
                    color: rgb(1, 36, 21);
                    font-size: 30px;
                    transition: all ease-in-out 250ms;
                }

                    .box1 li a:hover {
                        color: #2F4F4F;
                    }


        #box2 {
            margin-top: 35%;
            color: rgb(1, 36, 21);
        }

        .metin {
            font-family: Georgia, 'Times New Roman', Times, serif;
            font-size: 40px;
            font-weight: bold;
            color: rgb(1, 36, 21);
            margin-top: 15%;
            position: relative;
            left: 24%;
        }

        .unvan {
            font-family: Georgia, 'Times New Roman', Times, serif;
            font-size: 40px;
            color: rgb(1, 36, 21);
            margin-top: 5%;
            position: relative;
            left: 19%;
        }

        .iletisim {
            font-family: Georgia, 'Times New Roman', Times, serif;
            font-size: 40px;
            font-style: italic;
            color: rgb(1, 36, 21);
            margin-top: 5%;
            position: relative;
            left: 30%;

        }


        .yil {
            font-family: Georgia, 'Times New Roman', Times, serif;
            font-size: 20px;
            color: rgb(1, 36, 21);
            margin-top: -5px;
            position: relative;
            left: 44%;
            letter-spacing: 4px;
            font-weight: 100;
        }

        #galeri {
            margin-top: 10%;
            margin-left: 25%;
            width: 300px;
            min-height: 470px;
        }


        * {
            box-sizing: border-box
        }

        body {
            font-family: Verdana, sans-serif;
            margin: 0
        }

        .mySlides {
            display: none;
            border-radius: 70px;
        }

        img {
            vertical-align: middle;
        }

        /* Slideshow container */
        .slideshow-container {
            max-width: 300px;
            position: relative;
            margin: auto;
        }

        /* Next & previous buttons */
        .prev, .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            width: auto;
            padding: 16px;
            margin-top: -22px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            transition: 0.6s ease;
            border-radius: 0 3px 3px 0;
            user-select: none;
        }
        /* Position the "next button" to the right */
        .next {
            right: 0;
            border-radius: 3px 0 0 3px;
        }

            /* On hover, add a black background color with a little bit see-through */
            .prev:hover, .next:hover {
                background-color: rgba(0,0,0,0.8);
            }

        /* Caption text */
        .text {
            color: #f2f2f2;
            font-size: 15px;
            padding: 8px 12px;
            position: absolute;
            bottom: 8px;
            width: 100%;
            text-align: center;
        }
        /* Number text (1/3 etc) */
        .numbertext {
            color: #f2f2f2;
            font-size: 12px;
            padding: 8px 12px;
            position: absolute;
            top: 0;
        }

        /* The dots/bullets/indicators */
        .dot {
            cursor: pointer;
            height: 15px;
            width: 15px;
            margin: 0 2px;
            background-color: #bbb;
            border-radius: 50%;
            display: inline-block;
            transition: background-color 0.6s ease;
        }

            .active, .dot:hover {
                background-color: #717171;
            }

        /* Fading animation */
        .fade {
            -webkit-animation-name: fade;
            -webkit-animation-duration: 150000s;
            animation-name: fade;
            animation-duration: 150000s;
        }

    </style>

</head>

<body>
    <div id="banner">
        @foreach (var x in Model)
        {
            <a href="@x.reklamlink1"> <img src="@x.reklam1" /></a>
        }
    </div>
    <div id="banner2">

        @foreach (var x in Model)
        {
            <a href="@x.reklamlink2"> <img src="@x.reklam2" /></a>
        }
    </div>
    <div id="sayfa">

        <header id="yanmenu">
            <div id="ust">
                <div id="box">
                    <div id="kare">
                        @foreach (var x in Model)
                        {
                            <img src="@x.profil"/>
                        }
                    </div>
                </div>

            </div>
            <div id="orta">
                <ul class="box1">
                    <li><a href="/AnaSayfa/Index"><i class="fas fa-home"> Anasayfa</i></a></li>
                    <li><a href="/Hakkinda/Index"><i class="fas fa-user"> Hakkında</i></a></li>
                    <li><a href="/Egitim/Index"><i class="fas fa-university"> Eğitim</i></a></li>
                    <li><a href="/iletisim/Index"><i class="fas fa-tty"> İletişim</i></a></li>
                </ul>
            </div>
            <div id="alt">
                <ul id="box2">
                    @foreach (var x in Model)
                    {
                        @Html.Action("ikonlar", "AnaSAyfa")
                    }

                </ul>
            </div>

        </header>
        <nav id="anamenu">
            @foreach (var x in Model)
            {
                <p class="metin">
                    @x.isim

                </p>

                <p class="unvan">
                    @x.unvan
                </p>
            }

            @foreach (var x in Model)
            {
                <div id="galeri">
                    <div class="slideshow-container">

                        <div class="mySlides fade">
                            <div class="numbertext">1 / 3</div>
                            <img src="@x.resim1" style="width:100% ; border-radius:20px;">

                        </div>

                        <div class="mySlides fade">
                            <div class="numbertext">2 / 3</div>
                            <img src="@x.resim2" style="width:100% ; border-radius:20px;">

                        </div>

                        <div class="mySlides fade">
                            <div class="numbertext">3 / 3</div>
                            <img src="@x.resim3" style="width:100% ; border-radius:20px;">

                        </div>

                        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                        <a class="next" onclick="plusSlides(1)">&#10095;</a>

                    </div>
                    <br>

                    <div style="text-align:center">
                        <span class="dot" onclick="currentSlide(1)"></span>
                        <span class="dot" onclick="currentSlide(2)"></span>
                        <span class="dot" onclick="currentSlide(3)"></span>
                    </div>
                </div>

            }

            @foreach (var x in Model)
            {

                <p class="iletisim">
                    @x.iletisim
                </p>

                <p class="yil">
                    @x.aciklama
                </p>
            }


            <script src="https://kit.fontawesome.com/19b391057b.js" crossorigin="anonymous"></script>
            <script>
                var slideIndex = 1;
                showSlides(slideIndex);

                function plusSlides(n) {
                    showSlides(slideIndex += n);
                }

                function currentSlide(n) {
                    showSlides(slideIndex = n);
                }

                function showSlides(n) {
                    var i;
                    var slides = document.getElementsByClassName("mySlides");
                    var dots = document.getElementsByClassName("dot");
                    if (n > slides.length) { slideIndex = 1 }
                    if (n < 1) { slideIndex = slides.length }
                    for (i = 0; i < slides.length; i++) {
                        slides[i].style.display = "none";
                    }
                    for (i = 0; i < dots.length; i++) {
                        dots[i].className = dots[i].className.replace(" active", "");
                    }
                    slides[slideIndex - 1].style.display = "block";
                    dots[slideIndex - 1].className += " active";
                }
            </script>
        </nav>
    </div>

    <script src="https://kit.fontawesome.com/19b391057b.js" crossorigin="anonymous"></script>
</body>
</html>

