
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Giriş</title>
    <link rel="stylesheet" href="~/web-Admin/style.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            text-decoration: none;
            font-family: sans-serif;
            box-sizing: border-box;
        }

        body {
            background-image: linear-gradient(120deg, #3498db, #8e44ad);
            min-height: 100vh;
        }

        .container {
            background: #f1f1f1;
            height: 580px;
            width: 20%;
            padding: 80px 40px;
            border-radius: 10px;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%,-50%);
        }

        .txtb {
            border-bottom: 2px solid #adadad;
            position: relative;
            margin: 30px, 0;
        }

            .txtb input {
                font-size: 15px;
                color: #333;
                border: none;
                width: 100%;
                outline: none;
                background: none;
                padding: 0 5px;
                height: 40px;
            }

        img.admin {
            margin-left: 75px;
            margin-bottom: 50px;
            display: block;
            background: black;
            border-radius: 25%;
            width: 170px;
            height: 170px;
        }

        .logbtn {
            display: block;
            width: 100%;
            height: 50px;
            border: none;
            background-image: linear-gradient(120deg, #3498db, #8e44ad, #3495db);
            background-size: 200%;
            color: #fff;
            outline: none;
            cursor: pointer;
            border-radius: 5px;
            transition: .5s;
        }

            .logbtn:hover {
                background-position: right;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="contact-form">
            <img src="~/web-Admin/resim/adminikon.jpg" class="admin">
            <h2>Admin Giriş</h2>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <div class="txtb">
                    <input type="text" name="kullaniciAdi" placeholder="Kullanıcı Adı">
                </div>
                <div class="txtb">
                    <input type="password" name="sifre" placeholder="Şifre">
                </div>
                <br />
                <input type="submit" class="logbtn" value="Giriş">
            }
        </div>

    </div>
</body>
</html>