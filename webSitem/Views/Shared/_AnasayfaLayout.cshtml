@using webSitem.Models.sinif
@model List<AnaSayfa>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <title>Büşra GÜLEÇ</title>
    <meta name="description" content="Büşra GÜLEÇ">
    <meta name="keywords" content="busra , gulec , html , css , plc ">
    <link rel="stylesheet" href="/web-Kişisel Web Sitesi/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    </head>

        <body>
            <div id="sayfa" >
                <header id="yanmenu">
                    <div id="ust" >
                        <div id="box" >
                            <div id="kare">
                                @foreach (var x in Model)
                                {
                                    <img src="@x.profil">
                                }
                            </div>
                        </div>

                    </div>
                    <div id="orta">
                        <ul id="box1">
                            <li><a href="/AnaSayfa/Index"><i class="fas fa-home"> Anasayfa</i>
                            <li><a href="/Hakkinda/Index"><i class="fas fa-user"> Hakkında</i>
                            <li><a href="/Egitim/Index"><i class="fas fa-university"> Eğitim</i>
                            <li><a href="/iletisim/Index"><i class="fas fa-tty"> İletişim</i>
                        </ul>
                    </div>
                    <div id="alt">
                        <ul id="box2">
                            @foreach (var x in Model)
                            {
                                @Html.Action("ikonlar","AnaSAyfa")
                            }
                            
                        </ul>
                    </div>

                </header>
                <nav id="anamenu">
                    @foreach (var x in Model)
                    {
                        <p class="metin">
                            @x.isim

                        </p>

                        <p class="unvan">
                            @x.unvan
                        </p>
                    }

                    @foreach (var x in Model)
                    {
                        <div id="galeri">
                            <div class="slideshow-container">

                                <div class="mySlides fade">
                                    <div class="numbertext">1 / 3</div>
                                    <img src="@x.resim1" style="width:100% ; border-radius:20px;">

                                </div>

                                <div class="mySlides fade">
                                    <div class="numbertext">2 / 3</div>
                                    <img src="@x.resim2" style="width:100% ; border-radius:20px;">

                                </div>

                                <div class="mySlides fade">
                                    <div class="numbertext">3 / 3</div>
                                    <img src="@x.resim3" style="width:100% ; border-radius:20px;">

                                </div>

                                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                                <a class="next" onclick="plusSlides(1)">&#10095;</a>

                            </div>
                            <br>

                            <div style="text-align:center">
                                <span class="dot" onclick="currentSlide(1)"></span>
                                <span class="dot" onclick="currentSlide(2)"></span>
                                <span class="dot" onclick="currentSlide(3)"></span>
                            </div>
                        </div>

                    }

                    @foreach (var x in Model)
                    {

                        <p class="iletisim">
                            @x.iletisim
                        </p>

                        <p class="yil">
                            @x.aciklama
                        </p>
                    }


                    <script src="https://kit.fontawesome.com/19b391057b.js" crossorigin="anonymous"></script>
                    <script>
                        var slideIndex = 1;
                        showSlides(slideIndex);

                        function plusSlides(n) {
                            showSlides(slideIndex += n);
                        }

                        function currentSlide(n) {
                            showSlides(slideIndex = n);
                        }

                        function showSlides(n) {
                            var i;
                            var slides = document.getElementsByClassName("mySlides");
                            var dots = document.getElementsByClassName("dot");
                            if (n > slides.length) { slideIndex = 1 }
                            if (n < 1) { slideIndex = slides.length }
                            for (i = 0; i < slides.length; i++) {
                                slides[i].style.display = "none";
                            }
                            for (i = 0; i < dots.length; i++) {
                                dots[i].className = dots[i].className.replace(" active", "");
                            }
                            slides[slideIndex - 1].style.display = "block";
                            dots[slideIndex - 1].className += " active";
                        }
                    </script>
                </nav>
            </div>
            <script src="https://kit.fontawesome.com/19b391057b.js" crossorigin="anonymous"></script>
        </body>
    </html>
