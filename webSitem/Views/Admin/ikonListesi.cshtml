@using webSitem.Models.sinif
@model List<ikons>
@{
    ViewBag.Title = "ikonListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="mb-4">İkonlar Sayfası</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ikon</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ikonid</td>
            <td><i class="@x.ikon"></i></td>
            <td><a href="/Admin/ikonGetir/@x.ikonid" class="btn btn-primary">Güncelle</a></td>
            <td><a href="/Admin/ikonSil/@x.ikonid" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Admin/Yeniikon/" class="btn btn-primary">Yeni İkon Ekle</a>

